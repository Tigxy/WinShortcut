<Page x:Class="win_short_cut.ShortcutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:win_short_cut"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShortcutPage">
    <d:DesignerProperties.DesignStyle>
        <Style TargetType="Page">
            <Setter Property="Background" Value="White"/>
        </Style>
    </d:DesignerProperties.DesignStyle>

    <StackPanel>
        <Button x:Name="btn_back" FontFamily="Segoe MDL2 Assets" Content="&#xE76B;"
                FontSize="20" Padding="5" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"
                HorizontalAlignment="Left" Background="Transparent"
                Click="btn_back_Click"/>
        <StackPanel Margin="40">
            <TextBlock Text="Command"/>
            <TextBlock Text="Description"/>
        </StackPanel>
    </StackPanel>
</Page>
